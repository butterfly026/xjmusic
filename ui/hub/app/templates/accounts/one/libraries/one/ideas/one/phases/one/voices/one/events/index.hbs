<!-- Upper Container -->
<div class="form-horizontal container-fluid">

  <!-- List of Events -->
  <div class="sm-col-12">
    <div class="table-list">
      <table class="table">
        <thead>
        <tr>
          <th width="1%">Position</th>
          <th width="1%">Duration</th>
          <th width="1%">Velocity</th>
          <th width="1%">Note</th>
          <th width="1%">Inflection</th>
          <th width="1%">Tonality</th>
          <th><!-- Actions --></th>
          <th width="1%">#</th>
        </tr>
        </thead>
        <tbody>
        {{#each model.events as |event|}}
          <tr class="item">
            <th scope="row">{{event.position}}</th>
            <td>{{event.duration}}</td>
            <td>{{event.velocity}}</td>
            <td>{{#link-to "accounts.one.libraries.one.ideas.one.phases.one.voices.one.events.one" event}}{{event.note}}{{/link-to}}</td>
            <td>{{event.inflection}}</td>
            <td>{{event.tonality}}</td>
            <td>
              {{#link-to 'accounts.one.libraries.one.ideas.one.phases.one.voices.one.events.one.edit' event}}Edit{{/link-to}}
            </td>
            <td>{{event.id}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  {{#if (or auth.isArtist auth.isAdmin)}}
    <div class="sm-col-12">
      Or: {{#link-to 'accounts.one.libraries.one.ideas.one.phases.one.voices.one.events.new'}}Create New Event{{/link-to}}
    </div>
  {{/if}}
</div>
