<!-- Inner content above -->
{{outlet}}

<!-- Upper Container -->
<div class="form-horizontal">

  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <h5>{{#link-to 'users'}}People{{/link-to}}</h5>
      <h1>{{model.name}}</h1>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">User ID</label>
    <div class="col-sm-10">
      <div class="readonly-field">{{model.id}}</div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <div class="readonly-field">{{model.name}}</div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <div class="readonly-field">{{model.email}}</div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Avatar</label>
    <div class="col-sm-1">
      <div class="readonly-field"><a href="{{model.avatarUrl}}"><img src="{{model.avatarUrl}}"/></a></div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Roles</label>
    <div class="col-sm-10">
      {{#if auth.isAdmin}}
        {{input type="text" value=model.roles class="form-control" autofocus="autofocus"
                placeholder="The roles of the User"}}
      {{else}}
        <div class="readonly-field">{{model.roles}}</div>
      {{/if}}
    </div>
  </div>
  {{#if auth.isAdmin}}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'saveUser' model}}>Save changes</button>
      </div>
    </div>
  {{/if}}
</div>