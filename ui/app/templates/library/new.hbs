<!-- Lower Section -->
<div class="form-horizontal">

  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <hr/>
      <h4>Create a New Library</h4>
    </div>
  </div>

  <!-- New Record -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" autofocus="autofocus"
              placeholder="The name of the Library"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'createLibrary' model}}>Create</button>
    </div>
  </div>

</div>
