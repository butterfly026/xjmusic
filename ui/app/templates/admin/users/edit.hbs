<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <div class="placeholder-field">{{model.name}}</div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <div class="placeholder-field">{{model.email}}</div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Avatar</label>
    <div class="col-sm-1">
      <div class="placeholder-field"><a href="{{model.avatarUrl}}"><img src="{{model.avatarUrl}}" /></a></div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Roles</label>
    <div class="col-sm-10">
      {{input type="text" value=model.roles class="form-control" placeholder="The roles of the User"}}
<!--
      <label class="checkbox-inline"><input type="checkbox" checked value="user">User</label>
      <label class="checkbox-inline"><input type="checkbox" value="artist">Artist</label>
      <label class="checkbox-inline"><input type="checkbox" value="admin">Admin</label>
-->
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveUser' model}}>Save changes</button>
    </div>
  </div>
</div>