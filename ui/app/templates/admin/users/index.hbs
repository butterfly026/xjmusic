{{outlet}}

<div class="table-list">
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th width="50">Pic</th>
      <th>Name</th>
      <th>Email</th>
      <th>Roles</th>
    </tr>
    </thead>
    <tbody>
    {{#each users as |user|}}
      {{#link-to 'admin.users.edit' user tagName="tr" class="item"}}
        <th scope="row">{{user.id}}</th>
        <td><img class="avatar" src="{{user.avatarUrl}}"/></td>
        <td>{{user.name}}</td>
        <td>{{user.email}}</td>
        <td>{{user.roles}}</td>
      {{/link-to}}
    {{/each}}
    </tbody>
  </table>
</div>