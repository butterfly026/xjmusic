<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
<div class="form-horizontal">

  {{partial "accounts/one/form"}}

  {{#if auth.isAdmin}}
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'saveAccount' model}}>Save changes</button>
      </div>
    </div>
  {{/if}}

</div>

{{#if auth.isAdmin}}
  <!-- Lower Container -->
  <div class="form-horizontal">

    <!-- Header -->
    <div class="form-group row">
      <div class="col-sm-12">
        <hr/>
        <h4>Danger Zone</h4>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button class="btn btn-danger btn-xs" {{action 'destroyAccount' model}}>Delete Account</button>
      </div>
    </div>

  </div>
{{/if}}