<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
<div class="form-horizontal">

  <!-- Links to actions -->
  <div class="form-group row">
    <div class="col-sm-2">
      <h2>{{#link-to 'accounts.one.chains.one.links' model.chain}}Links{{/link-to}}</h2>
    </div>
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.chains.one.configs' model.chain}}Configs{{/link-to}}</h4>
    </div>
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.chains.one.libraries' model.chain}}Libraries{{/link-to}}</h4>
    </div>
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.chains.one.instruments' model.chain}}Instruments{{/link-to}}</h4>
    </div>
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.chains.one.ideas' model.chain}}Ideas{{/link-to}}</h4>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-12">
      <h6>{{#link-to 'accounts.one.chains.one.edit' model.chain}}Edit Chain Properties{{/link-to}}</h6>
    </div>
  </div>

  <!-- State change -->
  <div class="form-group row">
    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
      <div class="chain-state-change container-fluid {{model.chain.state}}-state">
        <table>
          <tbody>
          <tr class="row">
            <th class="align-middle">
              {{capitalize model.chain.state}}
            </th>
            <td>
              {{chain-state-change model.chain}}
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
