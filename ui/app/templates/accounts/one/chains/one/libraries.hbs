<!-- Inner Content -->
{{outlet}}

<!-- Container -->
<div class="form-horizontal">

  <!-- Only show list of records if non-empty -->
  {{#if model.chainLibraries.length}}

    <!-- List of Records -->
    <div class="sm-col-12">
      <div class="table-list">
        <table class="table">
          <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          {{#each model.chainLibraries as |chainLibrary|}}
            <tr>
              <th scope="row">{{chainLibrary.library.id}}</th>
              <td>{{#link-to "accounts.one.libraries.one"
                             chainLibrary.library}}{{chainLibrary.library.name}}{{/link-to}}</td>
              <td>
                <button {{action "removeLibrary" chainLibrary}}>Remove</button>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{else}}
    <div class="sm-col-12">
      <h4>There are no Libraries in this Chain.</h4>
    </div>
  {{/if}}

  <!-- Add a Library to this Chain -->
  <hr/>
  <div class="form-group row">
    <label class="col-sm-2 control-label">Select Library to intervals</label>
    <div class="col-sm-10">
      <!--input type="text" value=model.newChainLibrary.libraryId class="form-control" autofocus="autofocus"-->
      <!--placeholder="Library ID to grant access"}}-->
      {{#power-select
        placeholder="Select Library"
        options=model.libraries
        selected=model.libraryToAdd
        onchange=(action "setLibraryToAdd")
      as |library| }}
        {{library.name}} (#{{library.id}})
      {{/power-select}}
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'addLibrary' model}}>Add Library to
        Chain
      </button>
    </div>
  </div>

</div>

