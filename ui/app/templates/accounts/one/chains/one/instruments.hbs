<!-- Inner Content -->
{{outlet}}

<!-- Container -->
<div class="form-horizontal">

  <!-- Only show list of records if non-empty -->
  {{#if model.chainInstruments.length}}

    <!-- List of Records -->
    <div class="sm-col-12">
      <div class="table-list">
        <table class="table">
          <thead>
          <tr>
            <th>#</th>
            <th>Description</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          {{#each model.chainInstruments as |chainInstrument|}}
            <tr>
              <th scope="row">{{chainInstrument.instrument.id}}</th>
              <td>{{#link-to "accounts.one.libraries.one.instruments.one"
                             chainInstrument.instrument}}{{chainInstrument.instrument.description}}{{/link-to}}</td>
              <td>
                <button {{action "removeInstrument" chainInstrument}}>Remove</button>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{else}}
    <div class="sm-col-12">
      <h4>There are no Instruments in this Chain.</h4>
    </div>
  {{/if}}

  <!-- Add a Instrument to this Chain -->
  <hr/>
  <div class="form-group row">
    <label class="col-sm-2 control-label">Select Instrument to intervals</label>
    <div class="col-sm-10">
      <!--input type="text" value=model.newChainInstrument.instrumentId class="form-control" autofocus="autofocus"-->
      <!--placeholder="Instrument ID to grant access"}}-->
      {{#power-select
        placeholder="Select Instrument"
        options=model.instruments
        selected=model.instrumentToAdd
        onchange=(action "setInstrumentToAdd")
      as |instrument| }}
        {{instrument.description}} (#{{instrument.id}})
      {{/power-select}}
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'addInstrument' model}}>Add Instrument to
        Chain
      </button>
    </div>
  </div>

</div>

