<!-- Inner Content -->
{{outlet}}

<!-- Container -->
<div class="form-horizontal">

  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <h5>{{#link-to "accounts.one.libraries.one.instruments.one" model.instrument}}{{model.instrument.description}}{{/link-to}}</h5>
      <h1>Memes</h1>
    </div>
  </div>

  <!-- Only show list of records if non-empty -->
  {{#if model.instrumentMemes.length}}

    <!-- List of Records -->
    <div class="col-sm-offset-2 sm-col-12">
      <div class="table-list">
        <table class="table">
          <thead>
          <tr>
            <th>Name</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          {{#each model.instrumentMemes as |instrumentMeme|}}
            <tr>
              <td>{{instrumentMeme.name}}</td>
              <td>
                <button {{action "destroyInstrumentMeme" instrumentMeme}}>Remove</button>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{/if}}

  <!-- Add a Meme to this Instrument -->
  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <h4>Add Meme to {{model.instrument.description}}</h4>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Meme Name</label>
    <div class="col-sm-10">
      <!--input type="text" value=model.newInstrumentMeme.memeId class="form-control" autofocus="autofocus"-->
      <!--placeholder="Meme ID to grant access"}}-->
      {{input type="text" value=model.memeToAdd class="form-control" autofocus="autofocus"
              placeholder="The name of the Meme"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'addMemeToInstrument' model}}>Add Meme to
        Instrument
      </button>
    </div>
  </div>

</div>

