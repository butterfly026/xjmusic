<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
<div class="form-horizontal">

  <!-- Links to actions -->
  <div class="form-group row">
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.libraries.one.instruments.one.audios.one.events' model.audio}}Events{{/link-to}}</h4>
    </div>
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.libraries.one.instruments.one.audios.one.chords' model.audio}}Chords{{/link-to}}</h4>
    </div>
  </div>

  <!-- Waveform -->
  <audio controls>
    <source src="{{model.audioBaseUrl}}{{model.audio.waveformKey}}" type="audio/wav">
    Your browser does not support the audio element.
  </audio>

  <!-- Edit -->
  <div class="form-group row">
    <div class="col-sm-12">
      <h6>{{#link-to 'accounts.one.libraries.one.instruments.one.audios.one.edit' model.audio}}Edit Audio Properties{{/link-to}}</h6>
    </div>
  </div>

</div>
