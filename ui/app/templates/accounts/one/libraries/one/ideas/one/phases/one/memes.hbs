<!-- Inner Content -->
{{outlet}}

<!-- Container -->
<div class="form-horizontal">

  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <h5>{{#link-to "accounts.one.libraries.one.ideas.one.phases.one" model.phase}}{{model.phase.name}}{{/link-to}}</h5>
      <h1>Memes</h1>
    </div>
  </div>

  <!-- Only show list of records if non-empty -->
  {{#if model.phaseMemes.length}}

    <!-- List of Records -->
    <div class="col-sm-offset-2 sm-col-12">
      <div class="table-list">
        <table class="table">
          <thead>
          <tr>
            <th>Name</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          {{#each model.phaseMemes as |phaseMeme|}}
            <tr>
              <td>{{phaseMeme.name}}</td>
              <td>
                <button {{action "destroyPhaseMeme" phaseMeme}}>Remove</button>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{/if}}

  <!-- Add a Meme to this Phase -->
  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <h4>Add Meme to {{model.phase.name}}</h4>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Meme Name</label>
    <div class="col-sm-10">
      <!--input type="text" value=model.newPhaseMeme.memeId class="form-control" autofocus="autofocus"-->
      <!--placeholder="Meme ID to grant access"}}-->
      {{input type="text" value=model.memeToAdd class="form-control" autofocus="autofocus"
              placeholder="The name of the Meme"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'addMemeToPhase' model}}>Add Meme to
        Phase
      </button>
    </div>
  </div>

</div>

