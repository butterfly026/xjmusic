<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
<div class="form-horizontal">

  <!-- Links to actions -->
  <div class="form-group row">
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.libraries.one.ideas.one.memes' model.idea}}Memes{{/link-to}}</h4>
    </div>
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.libraries.one.ideas.one.phases' model.idea}}Phases{{/link-to}}</h4>
    </div>
  </div>

  <!-- Edit -->
  <div class="form-group row">
    <div class="col-sm-12">
      <h6>{{#link-to 'accounts.one.libraries.one.ideas.one.edit' model.idea}}Edit Idea Properties{{/link-to}}</h6>
    </div>
  </div>

  <!-- Quick Preview button -->
  <div class="form-group row">
    <div class="col-sm-12">
      <p>&nbsp;</p>
      <p>&nbsp;</p>
      <h4>Quick Preview</h4>
      <p>Fabricate a Preview Chain based only the current Idea.</p>
      <button type="button" class="btn btn-primary" {{action 'quickPreview'}}>Fabricate Preview</button>
    </div>
  </div>


</div>
