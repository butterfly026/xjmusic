<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
<div class="form-horizontal">

  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <h5>{{#link-to "accounts.one.libraries.one.ideas.one" model}}{{model.name}}{{/link-to}}</h5>
      <h1>Edit</h1>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Idea ID</label>
    <div class="col-sm-10">
      <div class="readonly-field">{{model.id}}</div>
    </div>
  </div>

  <!-- Name -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" autofocus="autofocus"
              placeholder="The name of the Idea"}}
    </div>
  </div>

  <!-- Density -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Density</label>
    <div class="col-sm-10">
      {{input type="number" step="any" value=model.density class="form-control"
              placeholder="The density of the Idea"}}
    </div>
  </div>

  <!-- Tempo -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Tempo</label>
    <div class="col-sm-10">
      {{input type="number" step="any" value=model.tempo class="form-control"
              placeholder="The tempo of the Idea"}}
    </div>
  </div>

  <!-- Key -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Key</label>
    <div class="col-sm-10">
      {{input type="text" value=model.key class="form-control" autofocus="autofocus"
              placeholder="The key of the Idea"}}
    </div>
  </div>

  <!-- Type -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Type</label>
    <div class="col-sm-10">
      {{input type="text" value=model.type class="form-control" autofocus="autofocus"
              placeholder="The type of the Idea"}}
    </div>
  </div>

  {{#if (or auth.isArtist auth.isAdmin)}}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'saveIdea' model}}>Save changes</button>
      </div>
    </div>
  {{/if}}
</div>

{{#if auth.isAdmin}}
  <!-- Lower Container -->
  <div class="form-horizontal">

    <!-- Header -->
    <div class="form-group">
      <div class="col-sm-12">
        <hr/>
        <h4>Danger Zone</h4>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-danger btn-xs" {{action 'destroyIdea' model}}>Delete Idea</button>
      </div>
    </div>

  </div>
{{/if}}