<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
<div class="form-horizontal">

  <div class="form-group">
    <label class="col-sm-2 control-label">Idea ID</label>
    <div class="col-sm-10">
      <div class="readonly-field">{{model.id}}</div>
    </div>
  </div>

  {{partial "accounts/one/libraries/one/ideas/one/form"}}

  {{#if (or auth.isArtist auth.isAdmin)}}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'saveIdea' model}}>Save changes</button>
      </div>
    </div>
  {{/if}}
</div>

{{#if auth.isAdmin}}
  <!-- Lower Container -->
  <div class="form-horizontal">

    <!-- Header -->
    <div class="form-group">
      <div class="col-sm-12">
        <hr/>
        <h4>Danger Zone</h4>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-danger btn-xs" {{action 'destroyIdea' model}}>Delete Idea</button>
      </div>
    </div>

  </div>
{{/if}}