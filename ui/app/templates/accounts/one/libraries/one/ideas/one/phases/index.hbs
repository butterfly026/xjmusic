<!-- Upper Container -->
<div class="form-horizontal">

  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <h5>{{#link-to "accounts.one.libraries.one.ideas.one" model.idea}}{{model.idea.name}}{{/link-to}}</h5>
      <h1>Phases</h1>
    </div>
  </div>

  <!-- List of Phases -->
  <div class="sm-col-12">
    <div class="table-list">
      <table class="table">
        <thead>
        <tr>
          <th>#</th>
          <th>Offset</th>
          <th>Total</th>
          <th>Name</th>
          <th>Key</th>
          <th>Density</th>
          <th>Tempo</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each model.phases as |phase|}}
          <tr class="item">
            <th scope="row">{{#link-to "accounts.one.libraries.one.ideas.one.phases.one" phase}}{{phase.id}}{{/link-to}}</th>
            <td>{{phase.offset}}</td>
            <td>{{phase.total}}</td>
            <td>{{phase.name}}</td>
            <td>{{phase.key}}</td>
            <td>{{phase.density}}</td>
            <td>{{phase.tempo}}</td>
            <td>
              {{#link-to 'accounts.one.libraries.one.ideas.one.phases.one.edit' phase}}Edit{{/link-to}}
              |
              {{#link-to 'accounts.one.libraries.one.ideas.one.phases.one.memes' phase}}Memes{{/link-to}}
              |
              {{#link-to 'accounts.one.libraries.one.ideas.one.phases.one.chords' phase}}Chords{{/link-to}}
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  {{#if (or auth.isArtist auth.isAdmin)}}
    <div class="sm-col-12">
      Or: {{#link-to 'accounts.one.libraries.one.ideas.one.phases.new'}}Create New Phase{{/link-to}}
    </div>
  {{/if}}
</div>
