<!-- Inner Content -->
{{outlet}}

<!-- Lower Section -->
<div class="form-horizontal">

  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <h5>{{#link-to "accounts.one.libraries.one.ideas.one.phases.one.voices.one.events" model.voice}}({{model.voice.type}}) {{model.voice.description}}{{/link-to}}</h5>
      <h1>New Event</h1>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Voice</label>
    <div class="col-sm-10">
      <div class="readonly-field">({{model.voice.type}}) {{model.voice.description}}</div>
    </div>
  </div>

  <!-- Note -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Note</label>
    <div class="col-sm-10">
      {{input type="text" value=model.note class="form-control" autofocus="autofocus"
              placeholder="The note of the Event"}}
    </div>
  </div>

  <!-- Inflection -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Inflection</label>
    <div class="col-sm-10">
      {{input type="text" value=model.inflection class="form-control" autofocus="autofocus"
              placeholder="The inflection of the Event"}}
    </div>
  </div>

  <!-- Position -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Position</label>
    <div class="col-sm-10">
      {{input type="number" step="any" value=model.position class="form-control"
              placeholder="The position of the Event"}}
    </div>
  </div>

  <!-- Velocity -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Velocity</label>
    <div class="col-sm-10">
      {{input type="number" step="any" value=model.velocity class="form-control"
              placeholder="The velocity of the Event"}}
    </div>
  </div>

  <!-- Tonality -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Tonality</label>
    <div class="col-sm-10">
      {{input type="number" step="any" value=model.tonality class="form-control"
              placeholder="The tonality of the Event"}}
    </div>
  </div>

  <!-- Duration -->
  <div class="form-group">
    <label class="col-sm-2 control-label">Duration</label>
    <div class="col-sm-10">
      {{input type="number" step="any" value=model.duration class="form-control"
              placeholder="The duration of the Event"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'createEvent' model}}>Create</button>
    </div>
  </div>

</div>
