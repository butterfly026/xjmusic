<!-- Upper Container -->
<div class="form-horizontal">

  <!-- Header -->
  <div class="form-group">
    <div class="col-sm-12">
      <h5>{{#link-to "accounts.one.libraries.one.ideas.one.phases.one.voices.one" model.voice}}({{model.voice.type}}) {{model.voice.description}}{{/link-to}}</h5>
      <h1>Events</h1>
    </div>
  </div>

  <!-- List of Events -->
  <div class="sm-col-12">
    <div class="table-list">
      <table class="table">
        <thead>
        <tr>
          <th>#</th>
          <th>Duration</th>
          <th>Inflection</th>
          <th>Note</th>
          <th>Position</th>
          <th>Tonality</th>
          <th>Velocity</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each model.events as |event|}}
          <tr class="item">
            <th scope="row">{{#link-to "accounts.one.libraries.one.ideas.one.phases.one.voices.one.events.one" event}}{{event.id}}{{/link-to}}</th>
            <td>{{event.duration}}</td>
            <td>{{event.inflection}}</td>
            <td>{{event.note}}</td>
            <td>{{event.position}}</td>
            <td>{{event.tonality}}</td>
            <td>{{event.velocity}}</td>
            <td>
              {{#link-to 'accounts.one.libraries.one.ideas.one.phases.one.voices.one.events.one.edit' event}}Edit{{/link-to}}
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  {{#if (or auth.isArtist auth.isAdmin)}}
    <div class="sm-col-12">
      Or: {{#link-to 'accounts.one.libraries.one.ideas.one.phases.one.voices.one.events.new'}}Create New Event{{/link-to}}
    </div>
  {{/if}}
</div>
