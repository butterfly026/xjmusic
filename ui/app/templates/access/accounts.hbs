<!-- List of Accounts -->
<div class="form-horizontal">
  <div class="sm-col-12">
    <div class="table-list">
      <table class="table">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
        </tr>
        </thead>
        <tbody>
        {{#each model as |account|}}
          <tr class="item" {{action "editAccount" account}}>
            <th scope="row">{{account.id}}</th>
            <td>{{account.name}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  {{#if auth.isAdmin}}
    <div class="sm-col-12">
      Or: {{#link-to 'access.accounts.new'}}Create New Account{{/link-to}}
    </div>
  {{/if}}
</div>

{{outlet}}