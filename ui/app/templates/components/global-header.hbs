        {{#link-to 'docs' tagName="li" class="nav-item"}}<a class="nav-link" href="">Docs</a>{{/link-to}}
        <li class="nav-item dropdown">
          <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle">
