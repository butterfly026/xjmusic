<!-- Upper Container -->
{{#modal-dialog}}
  <div class="form-horizontal container-fluid">

    {{partial "accounts/one/form"}}

    {{#if auth.isAdmin}}
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <button type="submit" class="btn btn-primary" {{action 'saveAccount' model}}>Save changes</button>
          <button type="button" class="btn btn-default" {{action 'cancel' model}}>Cancel</button>
        </div>
      </div>
    {{/if}}

  </div>

{{/modal-dialog}}
