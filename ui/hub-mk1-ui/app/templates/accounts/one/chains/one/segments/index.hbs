<!-- Inner Content -->
{{outlet}}

<!-- List of Segments -->
<div class="table-list">
  <table class="table">
    <thead>
    <tr>
      <th width="1%">Offset</th>
      <th width="1%">State</th>
      <th>Begin At</th>
      <th>Total</th>
      <th>Density</th>
      <th>Key</th>
      <th>Tempo</th>
      <th>Memes</th>
      <th>Choices</th>
      <th>Chords</th>
      <th>Messages</th>
    </tr>
    </thead>
    <tbody>
    {{#each model.segments as |segment|}}
      <tr id="segment-{{segment.id}}"
          class="item {{lowercase segment.state}}-state {{if (eq player.currentSegment.id segment.id) 'now-playing'}}"
          style="height: {{segment.rowHeight}}">
        <th>{{#link-to "accounts.one.chains.one.segments.one" segment}}{{segment.offset}}{{/link-to}}</th>
        <td>{{segment.state}}</td>
        <td>{{segment.beginAt}}</td>
        <td>{{segment.total}}</td>
        <td>{{segment.density}}</td>
        <td>{{segment.key}}</td>
        <td>{{segment.tempo}}</td>
        <td>{{segment-memes segment}}</td>
        <td>{{segment-choices segment}}</td>
        <td>{{segment-chords segment}}</td>
        <td>{{message-badges segment}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
