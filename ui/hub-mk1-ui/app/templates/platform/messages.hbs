<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
<div class="form-horizontal container-fluid">
  <div class="col-12">
    {{#link-to "platform.messages.new" class="btn btn-default"}}Create Message{{/link-to}}
  </div>
</div>

<!-- List of messages -->
{{#if model.length}}
  <div class="table-list">
    <table class="table">
      <thead>
      <tr>
        <th width="1%">At</th>
        <th width="1%">Type</th>
        <th>Message</th>
      </tr>
      </thead>
      <tbody>
      {{#each model as |message|}}
        <tr class="item {{lowercase message.type}}-type">
          <td class="do-not-break">{{message.createdAt}}</td>
          <td>{{message.type}}</td>
          <td>{{message.body}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <div class="form-horizontal container-fluid">
    <div class="col-12">
      <p>There are no platform messages.</p>
    </div>
  </div>
{{/if}}
