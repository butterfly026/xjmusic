#!/usr/bin/env bash

#
message_prefix="[ui/xj-docs]"

#
BASE=$(pwd)

# color output
RED=`tput setaf 1`
GREEN=`tput setaf 2`
RESET=`tput sgr0`

# Title & Usage
TITLE="build & push latest version of site to S3 distribution"
USAGE="
   Usage:
     bin/publish
"

# do it and exit if any step fails
cd themes/xj-docs-theme && npm install && gulp || exit 1
cd ${BASE}

hugo || exit 1
s3_website push || exit 1
