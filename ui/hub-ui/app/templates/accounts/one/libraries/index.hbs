<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
{{#if (or auth.isAdmin auth.isEngineer)}}
  <div class="form-horizontal container-fluid">
    <div class="col-sm-12 text-right">
      {{#link-to 'accounts.one.libraries.new' model.account}}{{fa-icon "plus"}} New Library{{/link-to}}
    </div>
  </div>
{{/if}}

<!-- List of Libraries -->
<div class="table-list">
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th><!-- Actions --></th>
      <th width="1%">#</th>
    </tr>
    </thead>
    <tbody>
    {{#each model.libraries as |library|}}
      <tr class="item">
        <td>{{#link-to "accounts.one.libraries.one" library}}{{library.name}}{{/link-to}}</td>
        <td>
          {{#link-to 'accounts.one.libraries.one.programs' library.account library}}Programs{{/link-to}}
          <span>&nbsp;</span>
          {{#link-to 'accounts.one.libraries.one.instruments' library.account library}}Instruments{{/link-to}}<span>&nbsp;</span>
          {{#link-to 'accounts.one.libraries.one.digest' library.account library}}Digest{{/link-to}}<span>&nbsp;</span>
          {{entity-actions "accounts.one.libraries.one" "edit|destroy" library.account library}}
        </td>
        <th scope="row">{{library.id}}</th>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>

