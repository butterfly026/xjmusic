<div class="headline container-fluid">
  <div class="row">
    <div class="col-sm-12">

      <!-- Entity type and ID -->
      <div class="entity">
        Pattern #{{model.id}}
      </div>

      <!-- Title -->
      <h1>
        {{model.name}}
        <small>
          {{entity-actions 'accounts.one.libraries.one.patterns.one' 'edit|clone|destroy' model.library.account
                           model.library model}}
        </small>
      </h1>

    </div>
  </div>
</div>

<!-- Links to actions -->
<div class="form-horizontal container-fluid">
  <div class="form-group row">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.patterns.one.index' model.library.account model.library model
                   class='nav-link'}}Preview{{/link-to}}
      </li>
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.patterns.one.memes' model.library.account model.library model
                   class='nav-link'}}Memes{{/link-to}}
      </li>
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.patterns.one.phases' model.library.account model.library model
                   class='nav-link'}}Phases{{/link-to}}
      </li>
    </ul>
  </div>
</div>

<!-- Inner Content -->
{{outlet}}