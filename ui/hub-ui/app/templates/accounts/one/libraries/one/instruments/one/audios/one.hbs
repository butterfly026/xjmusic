<div class="headline container-fluid">
  <div class="row">
    <div class="col-sm-12">

      <!-- Entity type and ID -->
      <div class="entity">
        Audio #{{model.id}}
      </div>

      <!-- Title -->
      <h1>
        {{model.name}}
        <small>
          {{entity-actions "accounts.one.libraries.one.instruments.one.audios.one" "move|edit|clone|destroy" model.instrument.library.account model.instrument.library model.instrument model}}
        </small>
      </h1>

    </div>
  </div>
</div>

<!-- Waveform in a row in fluid container-->
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      {{audio-waveform model}}
    </div>
  </div>
</div>

<!-- Segments to actions -->
<div class="form-horizontal container-fluid">
  <div class="form-group row">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.instruments.one.audios.one.events' model.instrument.library.account
                   model.instrument.library model.instrument model class='nav-link'}}Events{{/link-to}}
      </li>
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.instruments.one.audios.one.chords' model.instrument.library.account
                   model.instrument.library model.instrument model class='nav-link'}}Chords{{/link-to}}
      </li>
    </ul>
  </div>
</div>

<!-- Inner Content -->
{{outlet}}
