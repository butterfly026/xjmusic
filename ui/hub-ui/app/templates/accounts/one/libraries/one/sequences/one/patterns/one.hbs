<div class="headline container-fluid">
  <div class="row">
    <div class="col-sm-12">

      <!-- Entity type and ID -->
      <div class="entity">
        Pattern #{{model.id}}
      </div>

      <!-- Title -->
      <h1>
        {{model.name}}
        <small>
          {{entity-actions 'accounts.one.libraries.one.sequences.one.patterns.one' 'edit|clone|destroy' model.sequence.library.account model.sequence.library model.sequence model}}
        </small>
      </h1>

    </div>
  </div>
</div>

<!-- Segments to actions -->
<div class="form-horizontal container-fluid">
  <div class="form-group row">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.sequences.one.patterns.one.memes' model.sequence.library.account model.sequence.library model.sequence model class='nav-link'}}Memes{{/link-to}}
      </li>
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.sequences.one.patterns.one.chords' model.sequence.library.account model.sequence.library model.sequence model class='nav-link'}}Chords{{/link-to}}
      </li>
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.sequences.one.patterns.one.events' model.sequence.library.account model.sequence.library model.sequence model class='nav-link'}}Events{{/link-to}}
      </li>
    </ul>
  </div>
</div>

<!-- Inner Content -->
{{outlet}}