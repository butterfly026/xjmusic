<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
<div class="form-horizontal container-fluid">

  <!-- Links to actions -->
  <div class="form-group row">
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.libraries.one.instruments.one.memes' model.instrument}}Memes{{/link-to}}</h4>
    </div>
    <div class="col-sm-2">
      <h4>{{#link-to 'accounts.one.libraries.one.instruments.one.audios' model.instrument}}Audios{{/link-to}}</h4>
    </div>
  </div>

  <!-- Edit -->
  <div class="form-group row">
    <div class="col-sm-12">
      <h6>{{#link-to 'accounts.one.libraries.one.instruments.one.edit' model.instrument}}Edit Instrument Properties{{/link-to}}</h6>
    </div>
  </div>

  <!-- Quick Preview button -->
  <div class="form-group row">
    <div class="col-sm-12">
      <p>&nbsp;</p>
      <p>&nbsp;</p>
      <h4>Preview This Instrument</h4>
      <p>Fabricate a Preview Chain based only the current Instrument.</p>
      <button type="button" class="btn btn-primary" {{action 'quickPreview'}}>Fabricate Preview</button>
    </div>
  </div>

</div>
