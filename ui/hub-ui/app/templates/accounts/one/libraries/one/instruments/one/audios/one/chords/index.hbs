<!-- Upper Container -->
<div class="form-horizontal container-fluid">

  <!-- List of Chords -->
  <div class="col-sm-12">
    <div class="table-list">
      <table class="table">
        <thead>
        <tr>
          <th width="1%">Position</th>
          <th>Name</th>
          <th><!-- Actions --></th>
          <th width="1%">#</th>
        </tr>
        </thead>
        <tbody>
        {{#each model.chords as |chord|}}
          <tr class="item">
            <td>{{chord.position}}</td>
            <td>{{chord.name}}</td>
            <td>
              {{#link-to 'accounts.one.libraries.one.instruments.one.audios.one.chords.one.edit' chord.audio.instrument.library.account chord.audio.instrument.library chord.audio.instrument chord.audio chord}}{{fa-icon 'edit'}}{{/link-to}}
            </td>
            <th scope="row">{{chord.id}}</th>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  {{#if (or auth.isArtist auth.isAdmin)}}
    <div class="col-sm-12">
      Or: {{#link-to 'accounts.one.libraries.one.instruments.one.audios.one.chords.new' model.audio.instrument.library.account model.audio.instrument.library model.audio.instrument model.audio}}Create New Chord{{/link-to}}
    </div>
  {{/if}}
</div>
