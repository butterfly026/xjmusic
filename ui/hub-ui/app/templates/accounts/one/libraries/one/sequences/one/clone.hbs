<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
{{#modal-dialog onClickOverlay='goBack'}}
  <div class="form-horizontal container-fluid">

    <!-- Owner (User) -->
    <div class="form-group row">
      <h3>Clone</h3>
    </div>

    <!-- Library (Parent) -->
    <div class="form-group row">
      <label class="col-sm-2 control-label">Library</label>
      <div class="col-sm-10">
        {{#power-select
          placeholder="Select Library"
          options=model.libraries
          selected=model.sequence.library
          onchange=(action "setSequenceLibrary")
        as |library| }}
          {{library.name}} (#{{library.id}})
        {{/power-select}}
      </div>
    </div>

    <!-- Name -->
    <div class="form-group row">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        {{input type="text" value=model.sequence.name class="form-control" autofocus="autofocus"
                placeholder="The name of the Sequence"}}
      </div>
    </div>


    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'cloneSequence' model.sequence}}>Clone</button>
      </div>
    </div>
  </div>

{{/modal-dialog}}
