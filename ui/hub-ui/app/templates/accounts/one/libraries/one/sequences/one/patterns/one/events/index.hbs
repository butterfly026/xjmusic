<!-- Inner Content -->
{{outlet}}


<!-- Upper Container -->
{{#if (or auth.isArtist auth.isAdmin)}}
  <div class="form-horizontal container-fluid">
    <div class="col-sm-12 text-right">
      {{#link-to 'accounts.one.libraries.one.sequences.one.patterns.one.events.new'
                 model.pattern.sequence.library.account model.pattern.sequence.library model.pattern.sequence
                 model.pattern}}{{fa-icon "plus"}} Create New Event{{/link-to}}
    </div>
  </div>
{{/if}}

<!-- List of Events -->
<div class="table-list">
  <table class="table">
    <thead>
    <tr>
      <th width="1%">Position</th>
      <th width="1%">Voice</th>
      <th width="1%">Duration</th>
      <th width="1%">Velocity</th>
      <th width="1%">Note</th>
      <th width="1%">Inflection</th>
      <th width="1%">Tonality</th>
      <th><!-- Actions --></th>
      <th width="1%">#</th>
    </tr>
    </thead>
    <tbody>
    {{#each model.events as |event|}}
      <tr class="item">
        <th scope="row">{{event.position}}</th>
        <td>{{#link-to 'accounts.one.libraries.one.sequences.one.voices.one' event.voice.sequence.library.account
                       event.voice.sequence.library event.voice.sequence
                       event.voice}}{{event.voice.description}}{{/link-to}}</td>
        <td>{{event.duration}}</td>
        <td>{{event.velocity}}</td>
        <td>{{event.note}}</td>
        <td>{{event.inflection}}</td>
        <td>{{event.tonality}}</td>
        <td>
          {{entity-actions 'accounts.one.libraries.one.sequences.one.patterns.one.events.one' 'edit|clone|destroy'
                           event.pattern.sequence.library.account event.pattern.sequence.library event.pattern.sequence
                           event.pattern event}}
        </td>
        <td>{{event.id}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
