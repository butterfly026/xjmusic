<div class="headline container-fluid">
  <div class="row">
    <div class="col-sm-12">

      <!-- Entity type and ID -->
      <div class="entity">
        Idea #{{model.id}}
      </div>

      <!-- Title -->
      <h1>
        {{model.name}}
        <!-- should only show following edit icon is user has privileges to edit idea -->
        <small>{{#link-to 'accounts.one.libraries.one.ideas.one.edit' model.library.account model.library model}}{{fa-icon 'edit'}}{{/link-to}}</small>
      </h1>

    </div>
  </div>
</div>

<!-- Links to actions -->
<div class="form-horizontal container-fluid">
  <div class="form-group row">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.ideas.one.index' model.library.account model.library model class='nav-link'}}Preview{{/link-to}}
      </li>
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.ideas.one.memes' model.library.account model.library model class='nav-link'}}Memes{{/link-to}}
      </li>
      <li class="nav-item">
        {{#link-to 'accounts.one.libraries.one.ideas.one.phases' model.library.account model.library model class='nav-link'}}Phases{{/link-to}}
      </li>
    </ul>
  </div>
</div>

<!-- Inner Content -->
{{outlet}}