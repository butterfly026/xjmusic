<!-- Inner Content -->
{{outlet}}

<!-- Only show list of records if non-empty -->
{{#if model.instrumentMemes.length}}
  <div class="table-list">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      {{#each model.instrumentMemes as |instrumentMeme|}}
        <tr>
          <td>{{instrumentMeme.name}}</td>
          <td>
            <button {{action "destroyInstrumentMeme" instrumentMeme}}>Remove</button>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <div class="form-horizontal container-fluid">
    <div class="col-sm-12">
      <p>No Memes are bound to this Instrument.</p>
    </div>
  </div>
{{/if}}

<!-- Add a Meme to this Instrument -->
<div class="form-horizontal container-fluid">
  <div class="form-group row">
    <label class="col-sm-2 control-label">Meme to add</label>
    <div class="col-sm-10">
      <!--input type="text" value=model.newInstrumentMeme.memeId class="form-control" autofocus="autofocus"-->
      <!--placeholder="Meme ID to grant access"}}-->
      {{input type="text" value=model.memeToAdd class="form-control"
              placeholder="The name of the Meme"}}
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'addMemeToInstrument' model}}>Add Meme to
        Instrument
      </button>
    </div>
  </div>
</div>
