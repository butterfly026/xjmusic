<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
{{#modal-dialog onClickOverlay='goBack'}}
  <div class="form-horizontal container-fluid">

    <!-- Owner (User) -->
    <div class="form-group row">
      <label class="col-sm-2 control-label">User</label>
      <div class="col-sm-10">
        <div class="readonly-field">{{model.pattern.user.name}}</div>
      </div>
    </div>

    <!-- Library (Parent) -->
    <div class="form-group row">
      <label class="col-sm-2 control-label">Library</label>
      <div class="col-sm-10">
        {{#power-select
          placeholder="Select Library"
          options=model.libraries
          selected=model.pattern.library
          onchange=(action "setPatternLibrary")
        as |library| }}
          {{library.name}} (#{{library.id}})
        {{/power-select}}
      </div>
    </div>

    <!-- Name -->
    <div class="form-group row">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        {{input type="text" value=model.pattern.name class="form-control" autofocus="autofocus"
                placeholder="The name of the Pattern"}}
      </div>
    </div>


    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'clonePattern' model.pattern}}>Clone</button>
      </div>
    </div>
  </div>

{{/modal-dialog}}
