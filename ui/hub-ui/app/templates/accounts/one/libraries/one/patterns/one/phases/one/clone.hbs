<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
{{#modal-dialog onClickOverlay='goBack'}}
  <div class="form-horizontal container-fluid">

    <!-- Owner (User) -->
    <div class="form-group row">
      <h3>Clone</h3>
    </div>

    <!-- Pattern (Parent) -->
    <div class="form-group row">
      <label class="col-sm-2 control-label">Pattern</label>
      <div class="col-sm-10">
        {{#power-select
          placeholder="Select Pattern"
          options=model.patterns
          selected=model.phase.pattern
          onchange=(action "setPhasePattern")
        as |pattern| }}
          {{pattern.name}} (#{{pattern.id}})
        {{/power-select}}
      </div>
    </div>

    <!-- Offset -->
    <div class="form-group row">
      <label class="col-sm-2 control-label">Offset</label>
      <div class="col-sm-10">
        {{input type="number" value=model.phase.offset class="form-control"
                placeholder="The offset of the Phase"}}
      </div>
    </div>

    <!-- Name -->
    <div class="form-group row">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        {{input type="text" value=model.phase.name class="form-control" autofocus="autofocus"
                placeholder="The name of the Phase"}}
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'clonePhase' model.phase}}>Clone</button>
      </div>
    </div>
  </div>

{{/modal-dialog}}
