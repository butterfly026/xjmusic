<!-- Parent (Pattern) -->
<div class="form-group row">
  <label class="col-sm-2 control-label">Pattern</label>
  <div class="col-sm-10">
    <div class="readonly-field">{{model.pattern.name}}</div>
  </div>
</div>

<!-- Type -->
<div class="form-group row">
  <label class="col-sm-2 control-label">Type</label>
  <div class="col-sm-10">
    {{#if (or (eq model.pattern.type "Macro") (eq model.pattern.type "Main"))}}
      <strong>{{model.type}}</strong>
    {{else}}
      <select class="form-control" onchange={{action "selectPhaseType" value="target.value"}} title="Type">
        {{#if config.phaseDetailTypes}}
          {{#each config.phaseDetailTypes as |type|}}
            <option value={{type}} selected={{eq model.type type}}>{{type}}</option>
          {{/each}}
        {{else}}
          <option value={{model.type}} selected>{{model.type}}</option>
        {{/if}}
      </select>
    {{/if}}
  </div>
</div>

<!-- Name -->
<div class="form-group row">
  <label class="col-sm-2 control-label">Name <em>(optional)</em></label>
  <div class="col-sm-10">
    {{input type="text" value=model.name class="form-control" autofocus="autofocus"
            placeholder="The name of the Phase"}}
  </div>
</div>

<!-- Key -->
<div class="form-group row">
  <label class="col-sm-2 control-label">Key <em>(optional)</em></label>
  <div class="col-sm-10">
    {{input type="text" value=model.key class="form-control" autofocus="autofocus"
            placeholder="The key of the Phase"}}
  </div>
</div>

<!-- Density -->
<div class="form-group row">
  <label class="col-sm-2 control-label">Density <em>(optional)</em></label>
  <div class="col-sm-10">
    {{input type="number" step="any" value=model.density class="form-control"
            placeholder="The density of the Phase"}}
  </div>
</div>

<!-- Tempo -->
<div class="form-group row">
  <label class="col-sm-2 control-label">Tempo <em>(optional)</em></label>
  <div class="col-sm-10">
    {{input type="number" step="any" value=model.tempo class="form-control"
            placeholder="The tempo of the Phase"}}
  </div>
</div>

<!-- Offset -->
<div class="form-group row">
  <label class="col-sm-2 control-label">Offset</label>
  <div class="col-sm-10">
    {{input type="number" value=model.offset class="form-control"
            placeholder="The offset of the Phase"}}
  </div>
</div>

{{#if (not-eq model.pattern.type "macro")}}
  <!-- Total -->
  <div class="form-group row">
    <label class="col-sm-2 control-label">Total</label>
    <div class="col-sm-10">
      {{input type="number" value=model.total class="form-control"
              placeholder="The total beats in the Phase"}}
    </div>
  </div>
{{/if}}