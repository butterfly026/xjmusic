<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
{{#if (or auth.isArtist auth.isAdmin)}}
  <div class="form-horizontal container-fluid">
    <div class="col-sm-12 text-right">
      {{#edit-instrument-attributes model.newInstrument}}{{fa-icon "plus"}} New Instrument{{/edit-instrument-attributes}}
    </div>
  </div>
{{/if}}

<div class="table-list">
  <table class="table">
    <thead>
    <tr>
      <th width="1%">By</th>
      <th width="1%">Type</th>
      <th width="1%">State</th>
      <th>Description</th>
      <th width="1%">Density</th>
      <th width="1%">#</th>
    </tr>
    </thead>
    <tbody>
    {{#each model.instruments as |instrument|}}
      <tr class="item">
        <td>{{#link-to "users.one" instrument.user}}
          <img src="{{instrument.user.avatarUrl}}" alt="{{instrument.user.name}}" class="avatar"/>{{/link-to}}</td>
        <td>{{instrument.type}}</td>
        <td>{{instrument.state}}</td>
        <td>{{#link-to "accounts.one.libraries.one.instruments.editor" instrument.library.account instrument.library
                       instrument.id}}{{instrument.description}}{{/link-to}}</td>
        <td>{{instrument.density}}</td>
        <th scope="row">{{instrument.id}}</th>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>

