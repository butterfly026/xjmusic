<!-- Inner Content -->
{{outlet}}


<!-- Upper Container -->
<div class="form-horizontal container-fluid">

  <!-- List of Events -->
  <div class="col-sm-12">
    <div class="table-list">
      <table class="table">
        <thead>
        <tr>
          <th width="1%">Position</th>
          <th width="1%">Voice</th>
          <th width="1%">Duration</th>
          <th width="1%">Velocity</th>
          <th width="1%">Note</th>
          <th width="1%">Inflection</th>
          <th width="1%">Tonality</th>
          <th><!-- Actions --></th>
          <th width="1%">#</th>
        </tr>
        </thead>
        <tbody>
        {{#each model.events as |event|}}
          <tr class="item">
            <th scope="row">{{event.position}}</th>
            <td>{{#link-to 'accounts.one.libraries.one.patterns.one.voices.one' event.voice.pattern.library.account event.voice.pattern.library event.voice.pattern event.voice}}{{event.voice.description}}{{/link-to}}</td>
            <td>{{event.duration}}</td>
            <td>{{event.velocity}}</td>
            <td>{{event.note}}</td>
            <td>{{event.inflection}}</td>
            <td>{{event.tonality}}</td>
            <td>
              {{entity-actions 'accounts.one.libraries.one.patterns.one.phases.one.events.one' 'edit|destroy' event.phase.pattern.library.account event.phase.pattern.library event.phase.pattern event.phase event}}
            </td>
            <td>{{event.id}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  {{#if (or auth.isArtist auth.isAdmin)}}
    <div class="col-sm-12">
      Or: {{#link-to 'accounts.one.libraries.one.patterns.one.phases.one.events.new' model.phase.pattern.library.account model.phase.pattern.library model.phase.pattern model.phase}}Create New Event{{/link-to}}
    </div>
  {{/if}}
</div>
