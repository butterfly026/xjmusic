<!-- Inner Content -->
{{outlet}}

<!-- Container -->
<div class="form-horizontal container-fluid">

  <!-- Only show list of records if non-empty -->
  {{#if model.chainIdeas.length}}

    <!-- List of Records -->
    <div class="col-sm-12">
      <div class="table-list">
        <table class="table">
          <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          {{#each model.chainIdeas as |chainIdea|}}
            <tr>
              <th scope="row">{{chainIdea.idea.id}}</th>
              <td>{{#link-to "accounts.one.libraries.one.ideas.one"
                             chainIdea.idea.library.account
                             chainIdea.idea.library
                             chainIdea.idea}}{{chainIdea.idea.name}}{{/link-to}}</td>
              <td>
                <button {{action "removeIdea" chainIdea}}>Remove</button>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{else}}
    <div class="col-sm-12">
      <p>No particular ideas are bound to this Chain.</p>
    </div>
  {{/if}}

  <!-- Add a Idea to this Chain -->

  <div class="form-group row">
    <label class="col-sm-2 control-label">Select Idea to bind</label>
    <div class="col-sm-10">
      <!--input type="text" value=model.newChainIdea.ideaId class="form-control" autofocus="autofocus"-->
      <!--placeholder="Idea ID to grant access"}}-->
      {{#power-select
        placeholder="Select Idea"
        options=model.ideas
        selected=model.ideaToAdd
        onchange=(action "setIdeaToAdd")
      as |idea| }}
        {{idea.name}} (#{{idea.id}})
      {{/power-select}}
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'addIdea' model}}>Bind Idea to
        Chain
      </button>
    </div>
  </div>

</div>

