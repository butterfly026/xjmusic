<!-- Inner Content -->
{{outlet}}

<!-- Container -->
<div class="form-horizontal container-fluid">

  <!-- Only show list of records if non-empty -->
  {{#if model.chainPatterns.length}}

    <!-- List of Records -->
    <div class="col-sm-12">
      <div class="table-list">
        <table class="table">
          <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          {{#each model.chainPatterns as |chainPattern|}}
            <tr>
              <th scope="row">{{chainPattern.pattern.id}}</th>
              <td>{{#link-to "accounts.one.libraries.one.patterns.one"
                             chainPattern.pattern.library.account
                             chainPattern.pattern.library
                             chainPattern.pattern}}{{chainPattern.pattern.name}}{{/link-to}}</td>
              <td>
                <button {{action "removePattern" chainPattern}}>Remove</button>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{else}}
    <div class="col-sm-12">
      <p>No particular patterns are bound to this Chain.</p>
    </div>
  {{/if}}

  <!-- Add a Pattern to this Chain -->

  <div class="form-group row">
    <label class="col-sm-2 control-label">Select Pattern to bind</label>
    <div class="col-sm-10">
      <!--input type="text" value=model.newChainPattern.patternId class="form-control" autofocus="autofocus"-->
      <!--placeholder="Pattern ID to grant access"}}-->
      {{#power-select
        placeholder="Select Pattern"
        options=model.patterns
        selected=model.patternToAdd
        onchange=(action "setPatternToAdd")
      as |pattern| }}
        {{pattern.name}} (#{{pattern.id}})
      {{/power-select}}
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'addPattern' model}}>Bind Pattern to
        Chain
      </button>
    </div>
  </div>

</div>

