{{yield}}

<div class="message-badges">
{{#each model.messages as |message|}}
  <div class="badge launcher message message-{{message.type}}" {{action 'showMessage' message}} data-toggle="modal" data-target="#messageBadgesModal">{{message.type}}</div>
{{/each}}
</div>

<!-- Modal -->
<div class="modal bd-example-modal-lg" id="messageBadgesModal" tabindex="-1" role="dialog" aria-labelledby="messageBadgesModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="messageBadgesModalTitle"><!-- TITLE --></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <pre id="messageBadgesModalBody"><!-- BODY --></pre>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>