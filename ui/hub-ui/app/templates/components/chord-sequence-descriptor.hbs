<div class="chord-sequence-descriptor">

  {{#each segments as |segment|}}
    <div class="chord-sequence-descriptor-segment">


      {{#if segment.form}}
        <div class="form">{{segment.form}}</div>{{/if}}

      {{#if segment.deltaRootPitchClass}}
        <div class="delta">
          <small>&Delta;</small>{{segment.deltaRootPitchClass}}
        </div>
      {{/if}}

    </div>
  {{/each}}

  {{yield}}

</div>