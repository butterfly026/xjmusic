#!/usr/bin/env bash

# Copyright (c) XJ Music Inc. (https://xj.io) All Rights Reserved.

build_from_source() {
  BASEURL="${1}"
  TARGET="${2}"
  PKG="${3}"
  EXT="${4}"
  cd "${HOME}"
  wget "${BASEURL}${TARGET}${PKG}${EXT}"
  tar xvzf "${PKG}${EXT}"
  cd "${PKG}"
  sudo make install
  cd "${HOME}"
  rm -fr "${PKG}"
  rm "${PKG}${EXT}"
}

# redis client (requires gcc)
build_from_source "http://download.redis.io/" "" "redis-stable" ".tar.gz"
