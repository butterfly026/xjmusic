#!/usr/bin/env bash

# Copyright (c) XJ Music Inc. (https://xj.io) All Rights Reserved.

# Include common functions
. $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/common/functions

# Port
REDIS_PORT=6379

# Find Redis CLI executable
REDIS_COMMAND=redis-cli
if [ -f /usr/bin/redis-cli ]; then
    REDIS_COMMAND=/usr/bin/redis-cli
elif [ -f /usr/local/redis/bin/redis-cli ]; then
    REDIS_COMMAND=/usr/local/redis/bin/redis-cli
fi

# Host Arguments
REDIS_ARGS="${@}"

# Database
REDIS_DB="xj"

# connect to ${HOST}
step "Redis CLI"
${REDIS_COMMAND} -h 127.0.0.1 -p ${REDIS_PORT} ${REDIS_ARGS}
step_ok

#
finished_ok

