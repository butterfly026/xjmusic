#!/usr/bin/env bash

# Include common functions
. $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/../common/functions

# Title & Usage
TITLE="Reset MySQL db to reset_database.sql"
USAGE="
   Usage:
     bin/mysql_reset <host> <arguments...>

   <host> to run, as in: mysql -h <host>
   <arguments...> (optional) passed to 'mysql' client
"

# Connect as root
MYSQL_USER="root"
MYSQL_PORT=3300

# Find MySQL executable
MYSQL_COMMAND=mysql
if [ -f /usr/bin/mysql ]; then
    MYSQL_COMMAND=/usr/bin/mysql
elif [ -f /usr/local/mysql/bin/mysql ]; then
    MYSQL_COMMAND=/usr/local/mysql/bin/mysql
fi

# Host Arguments
MYSQL_ARGS="${@}"

# Database
MYSQL_DB="xj"

# Reset command SQL
RESET_CMD="
  drop database if exists ${MYSQL_DB};
  drop database if exists ${MYSQL_DB}_test;
  create database ${MYSQL_DB};
  create database ${MYSQL_DB}_test;
  "

# Expected Example MySQL database
EXAMPLE_SQL=${PWD}/reset_database.sql

# ensure platform is packaged
ensure_file ${EXAMPLE_SQL} "Example MySQL database"

# connect to ${HOST}
step "Client SQL execution"
${MYSQL_COMMAND} -u${MYSQL_USER} -h 127.0.0.1 -P ${MYSQL_PORT} ${MYSQL_ARGS} -e "${RESET_CMD}"
${MYSQL_COMMAND} -u${MYSQL_USER} -h 127.0.0.1 -P ${MYSQL_PORT} ${MYSQL_ARGS} ${MYSQL_DB} < ${EXAMPLE_SQL}
step_ok

#
finished_ok
