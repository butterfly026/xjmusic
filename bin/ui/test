#!/usr/bin/env bash

# Include common functions
. $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/../common/functions

#
step "Test Hub Mk1 UI"
cd ${BASEPATH}/ui/web-artist-mk1 || exit 1
npm install || exit 1
ember test || exit 1
step_ok

#
step "Test Player UI UI"
cd ${BASEPATH}/ui/web-player || exit 1
npm install || exit 1
jest || exit 1
step_ok

#
step "Test Hub Mk2 UI"
cd ${BASEPATH}/ui/web-artist-mk2 || exit 1
npm install || exit 1
jest || exit 1
step_ok

#
finished_ok
