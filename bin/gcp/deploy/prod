#!/usr/bin/env bash
# Copyright (c) XJ Music Inc. (https://xj.io) All Rights Reserved.

gcloud container clusters get-credentials xj-prod-us-west-1 --region us-west1

./gradlew --info --no-daemon \
  -PjibFromImage=gcr.io/xj-vpc-host-prod/base:latest \
  -PjibToImageRegistry=gcr.io/xj-vpc-host-prod \
  jib

# Restart Fabrication
kubectl -n yard rollout restart deployment/bump-chill-nexus deployment/bump-chill-ship
kubectl -n yard rollout restart deployment/bump-deep-nexus deployment/bump-deep-ship
kubectl -n yard rollout restart deployment/slaps-lofi-nexus deployment/slaps-lofi-ship
kubectl -n yard rollout restart deployment/space-flow-nexus deployment/space-flow-ship
kubectl -n yard rollout restart deployment/space-binaural-nexus deployment/space-binaural-ship
