#!/usr/bin/env bash
# Copyright (c) XJ Music Inc. (https://xj.io) All Rights Reserved.

gcloud container clusters get-credentials xj-prod-us-west-1 --region us-west1

./gradlew --info --no-daemon \
  -PjibFromImage=gcr.io/xj-vpc-host-prod/base:latest \
  -PjibToImageRegistry=gcr.io/xj-vpc-host-prod \
  jib

# Restart Fabrication
kubectl -n yard rollout restart deployment/bump_chill-nexus deployment/bump_chill-ship
kubectl -n yard rollout restart deployment/bump_deep-nexus deployment/bump_deep-ship
kubectl -n yard rollout restart deployment/slaps_lofi-nexus deployment/slaps_lofi-ship
kubectl -n yard rollout restart deployment/space_flow-nexus deployment/space_flow-ship
