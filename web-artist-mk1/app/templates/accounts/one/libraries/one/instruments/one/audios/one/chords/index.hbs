<!-- Inner Content -->
{{outlet}}

<!-- Upper Container -->
{{#if (or auth.isArtist auth.isAdmin)}}
  <div class="form-horizontal container-fluid">
    <div class="col-sm-12 text-right">
      {{#link-to 'accounts.one.libraries.one.instruments.one.audios.one.chords.new'
                 model.audio.instrument.library.account model.audio.instrument.library model.audio.instrument
                 model.audio}}{{fa-icon "plus"}} Create New Chord{{/link-to}}
    </div>
  </div>
{{/if}}

<!-- List of Chords -->
<div class="table-list">
  <table class="table">
    <thead>
    <tr>
      <th width="1%">Position</th>
      <th>Name</th>
      <th><!-- Actions --></th>
      <th width="1%">#</th>
    </tr>
    </thead>
    <tbody>
    {{#each model.chords as |chord|}}
      <tr class="item">
        <td>{{chord.position}}</td>
        <td>{{chord.name}}</td>
        <td>
          {{entity-actions 'accounts.one.libraries.one.instruments.one.audios.one.chords.one' 'edit|destroy'
                           chord.instrumentAudio.instrument.library.account
                           chord.instrumentAudio.instrument.library
                           chord.instrumentAudio.instrument
                           chord.instrumentAudio chord}}
        </td>
        <th scope="row">{{chord.id}}</th>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
